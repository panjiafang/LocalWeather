<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/activity_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信分享"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="18dp"
            />

        <Button android:id="@+id/dialog_score_cancel"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:background="@drawable/setting_btn_bg"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="返回"/>
        </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="主界面开启摇一摇分享功能"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="15dp"/>

        <CheckBox android:id="@+id/dialog_weixin_cbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:background="@drawable/cbox_bg"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 外部存储不存在,则无法使用微信分享"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 因网络原因可导致无法分享,请稍候再试"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 手机需安装微信并登录才可完成内容分享"/>


</LinearLayout>