<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/activity_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分余额及使用介绍"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="18dp"
            />

        <Button android:id="@+id/dialog_score_cancel"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:background="@drawable/setting_btn_bg"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="返回"/>
        </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/dialog_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="我的积分："
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="15dp"/>

        <TextView android:id="@+id/dialog_score_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="0"
            android:textColor="#ff0000"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_toRightOf="@id/dialog_score_tv"/>

        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 积分来源：通过在精彩推荐模块完成任务"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 积分用途：导入他人分享的主题皮肤"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 积分消耗：导入皮肤10积分/次"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#ff0000"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:text="* 重要说明：导入功能在下一版本开放"/>
</LinearLayout>