<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/activity_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市管理"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="18dp"
            />

        <Button android:id="@+id/dialog_city_cancel"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:background="@drawable/setting_btn_bg"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="返回"/>
        </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView android:id="@+id/dialog_tv_none"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="暂无城市"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <ListView android:id="@+id/dialog_city_listview"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@null"
        android:listSelector="@null"
        android:cacheColorHint="@null"></ListView>

</LinearLayout>