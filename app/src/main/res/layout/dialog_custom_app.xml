<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_bg">

        <RelativeLayout
            android:id="@+id/dialog_app_bg"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#11111111">

            <TextView
                android:id="@+id/dialog_app_cur_effect"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#22222222"
                android:gravity="center"
                android:text="自我\n天气" />

            <TextView
                android:id="@+id/dialog_app_day_effect"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#22222222"
                android:gravity="center"
                android:text="自我\n天气" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_toLeftOf="@id/dialog_app_bg"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/setting_tv_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="应用背景"
                android:textColor="@color/black"
                android:textSize="@dimen/weather_cur_size" />

            <Button android:id="@+id/dialog_btn_random_font"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@id/setting_tv_bg"
                android:text="换一个"
                android:textSize="12dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/setting_btn_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_tv_bg"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="红色"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/weather_color_size"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <SeekBar android:id="@+id/setting_seekbar_app_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:maxHeight="1dp"
                        android:thumb="@drawable/thumb"
                        android:thumbOffset="15dp"
                        android:progressDrawable="@drawable/seekbar_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="绿色"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/weather_color_size"
                        android:layout_gravity="center_vertical"/>
                    <SeekBar android:id="@+id/setting_seekbar_app_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:maxHeight="1dp"
                        android:thumb="@drawable/thumb"
                        android:thumbOffset="15dp"
                        android:progressDrawable="@drawable/seekbar_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="蓝色"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/weather_color_size"
                        android:layout_gravity="center_vertical"/>
                    <SeekBar android:id="@+id/setting_seekbar_app_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:maxHeight="1dp"
                        android:thumb="@drawable/thumb"
                        android:thumbOffset="15dp"
                        android:progressDrawable="@drawable/seekbar_bg" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/setting_rg_appbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/setting_rb_bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:button="@null"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/radiobutton_bg"
                        android:text="单色"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/setting_rb_bg_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:background="@null"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/radiobutton_bg"
                        android:text="图片"
                        android:textColor="@color/black"/>
                </RadioGroup>
            </LinearLayout>

        </RelativeLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button android:id="@+id/dialog_app_btn_cancel"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/setting_btn_bg"
            android:layout_marginRight="20dp"
            android:text="取消"/>

        <Button android:id="@+id/dialog_app_btn_save"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/setting_btn_bg"
            android:text="保存"/>

    </LinearLayout>

</LinearLayout>